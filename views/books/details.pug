extends ../layouts/master
block content
    .grid-x
        if book
            div(class='cell large-4 p-1 book')
                img(src=book.cover)
            div(class='cell large-8 p-1 book')
                h2 #{book.title} 
                div
                    p Category: #{book.category}
                    p Author: #{book.author}
                    p Pushlisher: #{book.pushlisher}
                br
                .price 
                    span $#{book.price}
                br
                p=book.description
                form(method='post' action='/cart/' + book._id)
                    input(type='submit' class='button small success' value='Add To Cart')
                    input(type='hidden' name='_csrf' value=_csrf)

