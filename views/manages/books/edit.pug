extends ../../layouts/manage
block content
    h1 Edit Book
    form(action='/manages/books/edit/' + book._id method="post")
        .grid-container
            .grid-x.grid-padding-x
                .large-12.cell
                    label
                        | Title

                        input(type="text" placeholder="" name='title' value=book.title)
                .large-12.cell
                    label
                        | Author

                        input(type="text" placeholder="" name='author' value=book.author)
                .large-12.cell        
                    label
                        | Pushlisher

                        input(type="text" placeholder="" name='pushlisher' value=book.pushlisher)
                .large-12.cell        
                    label
                        | Price

                        input(type="text" placeholder="" name='price' value=book.price)
                .large-12.cell
                    label
                        | Category

                        select(name='category')
                            option(value=book.category)=book.category
                            each category in categories
                                option(value=category.name)=category.name
                .large-12.cell
                    label
                        | Description

                        input(type="text" placeholder="" name='description' value=book.description)
                .large-12.cell
                    label
                        | Cover URL

                        input(type="text" placeholder="" name='cover' value=book.cover)
                .large-12.cell
                    label
                        input(type="submit" class='button')
                        input(type="hidden" name='_csrf' value=_csrf )
