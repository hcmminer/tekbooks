extends ../../layouts/manage
block content
    h1 Add Book
    form(action='/manages/books' method="post")
        .grid-container
            .grid-x.grid-padding-x
                .large-12.cell
                    label
                        | Title

                        input(type="text" placeholder="" name='title')
                .large-12.cell
                    label
                        | Author

                        input(type="text" placeholder="" name='author')
                .large-12.cell        
                    label
                        | Pushlisher

                        input(type="text" placeholder="" name='pushlisher')
                .large-12.cell        
                    label
                        | Price

                        input(type="text" placeholder="" name='price')
                .large-12.cell
                    label
                        | Category

                        select(name='category')
                            each category in categories
                                option(value=category.name)=category.name
                .large-12.cell
                    label
                        | Description

                        input(type="text" placeholder="" name='description')
                .large-12.cell
                    label
                        | Cover URL

                        input(type="text" placeholder="" name='cover')
                .large-12.cell
                    label
                        input(type="submit" class='button')
                        input(type="hidden" name='_csrf' value=_csrf )
